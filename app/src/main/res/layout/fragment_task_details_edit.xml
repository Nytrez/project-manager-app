<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescriptionHeader"
            android:id="@+id/taskDetailsEditDescriptionHeader"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@drawable/text_input_border"
            android:padding="16dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescriptionShort"
            android:id="@+id/taskDetailsEditDescriptionShort"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@drawable/text_input_border"
            android:padding="16dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:id="@+id/taskDetailsEditDescription"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@drawable/text_input_border"
            android:padding="16dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Priority"
            android:id="@+id/taskDetailsEditPriority"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@drawable/text_input_border"
            android:padding="16dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ResponsiblePerson"
            android:id="@+id/taskDetailsEditResponsiblePerson"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@drawable/text_input_border"
            android:padding="16dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status"
            android:id="@+id/taskDetailsEditStatus"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@drawable/text_input_border"
            android:padding="16dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CompletionDate"
            android:id="@+id/taskDetailsEditCompletionDate"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@drawable/text_input_border"
            android:padding="16dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DueDate"
            android:id="@+id/taskDetailsEditDueDate"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@drawable/text_input_border"
            android:padding="16dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/buttontaskDetailsEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:padding="8dp"
            android:text="Edit"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttontaskDetailsRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:padding="8dp"
            android:text="Remove"
            android:textSize="20dp" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>